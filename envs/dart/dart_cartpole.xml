<?xml version="1.0" ?>
<skel version="1.0">
    <world name="world 1">
        <physics>
            <time_step>0.02</time_step>
            <gravity>0 -9.81 0</gravity>
            <collision_detector>fcl_mesh</collision_detector>
        </physics>
        <skeleton name="skeleton 1">
            <body name="base">
                <gravity>1</gravity>
                <transformation>0 0 0 0 0 0</transformation>
                <inertia>
                    <mass>1.0</mass>
                    <offset>0 0 0</offset>
                </inertia>
                <visualization_shape>
                    <geometry>
                        <box>
                            <size>0.5 0.01 0.5</size>
                        </box>
                    </geometry>
                </visualization_shape>
            </body>
            
            <body name="pole">
                <gravity>1</gravity>
                <transformation>0 0.27 0 0 0 3.14</transformation>
                <inertia>
                    <mass>0.1</mass>
                    <offset>0 0 0</offset>
